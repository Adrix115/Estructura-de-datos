#pragma once
#include<iostream>
#define MAX 100
using namespace std;

class Cola
{
	public:
		int inicio;
		int final;
		int info[MAX];
		Cola() {
			inicio = 0;
			final = 0;
		}
		void push(int valor);
		void pop();
		void mostrar();

};



#include "Cola.h"

Cola::Cola(){

}

void Cola::push(int valor) {
	if (inicio == final)
		cout << "La cola esta vacia" << endl;
	if (final == MAX)
		cout << "La cola esta llena" << endl;
	else {
		info[final] = valor;
		final++;
	}

}
void Cola::pop() {
	if (inicio == final)
		cout << "La cola esta vacia" << endl;
	if (final == MAX)
		cout << "La cola esta llena" << endl;
	else {

	}
}
void Cola::mostrar() {
	if (inicio == final)
		cout << "La cola esta vacia" << endl;
	if (final == MAX)
		cout << "La cola esta llena" << endl;
	else {

	}
}
